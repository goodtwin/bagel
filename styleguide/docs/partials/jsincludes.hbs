<script charset="utf-8">
  // sidebar proof of concept

  $(document).on('click','.ui.button[data-variation]',function(evt){
    var $tgt = $(evt.target),
      $sidebarContainment = $('.ui.sidebar-containment'),
      variation = $tgt.attr('data-variation'),
      $variation = $( "#" + $tgt.attr('data-sidebar-id') );


    // currently css doesn't support animation with multiple
    // sidebars coming in from the same side. easy hack-a-round.
    if($sidebarContainment.is('.pushed')){
      setTimeout(function(){
        $variation.css({zIndex: 999});
      },350);
    } else {
      $variation.css({zIndex: 1001});
    }

    $tgt.toggleClass('active');
    $variation.toggleClass('active');
    $sidebarContainment
      .toggleClass(variation)
      .toggleClass('pushed');
  });
</script>
